<div class="col-md-12">
    <div class="row">
        <h1>Hello <%= @user.first_name %>
    </div>
   
    <div class="row">
        <div  class="col-md-6">
            <form id="contact-form" action="/<%= @user.id %>/profile" method="post">
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
                <input name="_method" type="hidden" value="patch" />
                
                <label>First Name:</label>
                <input type="text" name="update_user[first_name]" value="<%= @user.first_name %>" />
                
                <label>Last Name:</label>
                <input type="text" name="update_user[last_name]" value="<%= @user.last_name %>" />

                <label>Email Address:</label>
                <input type="text" name="update_user[email]" value="<%= @user.email %>" />
                
                <label>Date of Birth:</label>
                <input type="date" name="update_user[DOB]" value="<%= @user.DOB %>" />

                <input type="submit" value="Edit Info">
            </form>
        </div>
    </div>
</div>